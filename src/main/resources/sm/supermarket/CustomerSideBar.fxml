<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="BoardPaneAdmin" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="1200.0"
            style="-fx-background-color: #47A025;" xmlns="http://javafx.com/javafx/18"
            fx:controller="sm.supermarket.CustomerSideBarController">
    <left>
        <VBox fx:id="hbox_left" alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0"
              prefWidth="170.0" style="-fx-background-color: #AAE41B; -fx-background-radius: 0 30 30 0;"
              BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="img_logo" fitHeight="109.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../img/buying_64px.png"/>
                    </image>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </ImageView>
                <Label fx:id="lbl_fast" text="Fast" textFill="#ffffff">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="25.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="7.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="lbl_market" text="Market" textFill="#ffffff">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="25.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="2.0"/>
                    </VBox.margin>
                </Label>
                <JFXButton fx:id="btn_dashboard" onMouseClicked="#dashboard" prefHeight="91.0" prefWidth="170.0"
                           text="DASHBOARD" textFill="#ffffff" textOverrun="CLIP">
                    <VBox.margin>
                        <Insets top="4.0"/>
                    </VBox.margin>
                    <graphic>
                        <ImageView fx:id="img_dash" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../../img/dashboard_26px.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="btn_buy" onMouseClicked="#cartList" prefHeight="91.0" prefWidth="170.0"
                           text="PURCHASE" textFill="#ffffff" textOverrun="CLIP">
                    <VBox.margin>
                        <Insets top="4.0"/>
                    </VBox.margin>
                    <graphic>
                        <ImageView fx:id="img_dash" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../../img/buying_64px.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="Arial Rounded MT Bold" size="14.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="btn_logout" onMouseClicked="#logout" prefHeight="70.0" prefWidth="170.0" text="LOGOUT"
                           textFill="#ffffff">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <graphic>
                        <ImageView fx:id="img_logout" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../../img/Logout_30px.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="Arial Rounded MT Bold" size="15.0"/>
                    </font>
                </JFXButton>
            </children>
        </VBox>
    </left>
</BorderPane>
